<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="TreadmillApplication.SliderWidget"
	x:Name="UserControl"
	d:DesignWidth="310" d:DesignHeight="40.5">

	<Grid x:Name="LayoutRoot">
		  <Grid.RowDefinitions >
            <RowDefinition Height="40px" />
            <RowDefinition Height="40px" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>
		
		<Slider Style="{DynamicResource MySlider}" Name="thisSlider" SmallChange="0" Grid.Row="0" />
        <TextBox Name="ValueBox" Text="{Binding ElementName=thisSlider, Path=Value}" Foreground="Black" Margin="3,0,0,-46" Background="{x:Null}" FontSize="21.333" HorizontalAlignment="Left" Width="54" IsEnabled="False" BorderBrush="{x:Null}" SelectionBrush="{x:Null}" Height="40" Grid.Row="2" VerticalAlignment="Bottom"/>
        
	</Grid>
</UserControl>
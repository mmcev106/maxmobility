<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="TreadmillApplication.MainWindow"
	xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
	xmlns:local="clr-namespace:TreadmillApplication"
	x:Name="Window"
	Title="Treadmill Application"
	Width="1024" Height="768" ResizeMode="NoResize" WindowStyle="None">
	
	<Grid x:Name="LayoutRoot">
		<TabControl>
			<local:TabItem1 x:Name="StartScreen" Width="0" Height="0" Margin="0"/>
			<local:TabItem2 x:Name="SetupScreen" Width="0" Height="0" Margin="0"/>
			<local:ActiveScreen x:Name="ActiveScreen" Width="0" Height="0" Margin="0" />
		</TabControl>
	</Grid>
</Window>
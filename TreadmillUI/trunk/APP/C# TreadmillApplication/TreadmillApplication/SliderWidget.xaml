<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="TreadmillApplication.SliderWidget"
	x:Name="UserControl"
	d:DesignWidth="310" d:DesignHeight="40.5">

	<Grid x:Name="LayoutRoot">
		<Slider Style="{DynamicResource MySlider}" Maximum="100" SmallChange="0"/>
		<TextBlock HorizontalAlignment="Left" Height="36.667" Margin="6,0,0,-41.5" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="83.333" Foreground="#FFFBFBFB" Text="{Binding currentValue, ElementName=UserControl}"/>
	</Grid>
</UserControl>